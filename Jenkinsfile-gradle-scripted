node {
  stage('SCM') {
    checkout scm
  }

  stage('SonarQube Analysis') {
    withSonarQubeEnv() {
      withGradle() {
        sh "gradle sonarqube"
      }
    }
  }
}

// Requires Webhook setup in SonarQube
stage('SonarQube Quality Gate') {
  timeout(time: 1, unit: 'HOURS') {
    def qg = waitForQualityGate()
    if (qg.status != 'OK') {
      error "Pipeline aborted due to quality gate failure: ${qg.status}"
    }
  }
}
